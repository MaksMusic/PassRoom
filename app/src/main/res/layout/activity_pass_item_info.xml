<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PassItemInfo">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:menu="@menu/menu_info_item"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnToolBarExit"
            android:background="@drawable/arrow"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textToolBar"
            android:text="информация"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.Toolbar>




    <LinearLayout
        android:layout_marginTop="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/ll_style"
        android:id="@+id/LL1"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.AppCompatTextView
            android:text="Название:"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="24sp"
            android:layout_marginStart="2dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/textNameItem"

            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:longClickable="false"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/ll_style"
        android:id="@+id/LL2"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/LL1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.AppCompatTextView
            android:text="Логин:"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textLogin"
            android:layout_marginStart="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/textLoginItem"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"

            android:longClickable="false"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/ll_style"
        android:id="@+id/LL3"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/LL2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.AppCompatTextView
            android:text="Пароль:"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textPass"

            android:layout_marginStart="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/textPassItem"
            android:layout_marginStart="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:longClickable="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/ll_style"
        android:id="@+id/LL4"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/LL3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.AppCompatTextView
            android:text="Почта:"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="24sp"
            android:layout_marginStart="2dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/textEmailItem"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:clickable="false"
            android:ellipsize="end"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <androidx.appcompat.widget.AppCompatTextView
        android:text="Заметки:"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:layout_marginStart="2dp"
        app:layout_constraintTop_toBottomOf="@+id/LL4"
        android:layout_marginTop="30dp"
        android:id="@+id/textNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/ll_style"
        android:id="@+id/LL5"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textNotes"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="150dp">


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/textNotesItem"
            android:layout_marginStart="10dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:longClickable="false" />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:id="@+id/LL6"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/LL5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSave"
            android:text="сохранить"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>